CREATE TABLE EMPLOYEE
(
  EMP_CODE NUMBER(4) PRIMARY KEY,
  EMP_NAME VARCHAR2(50) NOT NULL,
  DESIGN VARCHAR2(50) NOT NULL,
  DOJ DATE NULL,
  BASIC NUMBER(6,2) DEFAULT 0,
  DEPT_CODE NUMBER(2) REFERENCES DEPARMENT(DEPT_CODE)
);

DESCR EMPLOYEE;

